
<p id="notice"><%= notice %></p>

<p>
  <strong>Origin:</strong>
  <%= @flight.origin %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @flight.destination %>
</p>

<p>
  <strong>Date:</strong>
  <%= @flight.date %>
</p>

<p>
  <strong>Plane:</strong>
  <%= @flight.plane_id %>
</p>

<p><%= @planeRows %></p>

<h2>Seating plan for this plane</h2>
<table>
  <tbody>
    <% for i in 1..@planeRows %>
        <% letter_array = ("a"..."z").to_a %>
        <% @letter = letter_array[i-1] %>
      <tr>
        <% for i in 1..@planeColumns %>
          <td><%=   i.to_s + @letter.upcase   %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

